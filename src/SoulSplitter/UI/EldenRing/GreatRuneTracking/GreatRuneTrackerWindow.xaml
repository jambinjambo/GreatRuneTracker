<Window x:Class="SoulSplitter.UI.EldenRing.GreatRuneTracking.GreatRuneTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoulSplitter.UI.EldenRing.GreatRuneTracking"
        xmlns:converters="clr-namespace:SoulSplitter.UI.Converters"
        mc:Ignorable="d"
        Title="Great Rune Tracker"
        Icon="../../../soulsplitter.ico"
        Width="350"
        Height="300"
        MinWidth="200"
        MinHeight="150"
        Topmost="True"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        d:DataContext="{d:DesignInstance local:GreatRuneTrackerViewModel, IsDesignTimeCreatable=False}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary>
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- Style for showing/hiding based on ShowOnlyObtained setting -->
            <Style x:Key="RuneItemStyle" TargetType="Border">
                <Setter Property="Visibility" Value="Visible"/>
                <Style.Triggers>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding DataContext.ShowOnlyObtained, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                            <Condition Binding="{Binding IsObtained}" Value="False"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{Binding BackgroundColor, Converter={StaticResource ColorToBrushConverter}}"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title bar with close button -->
            <Grid Grid.Row="0" Background="#40000000" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Great Rune Tracker"
                           Foreground="{Binding TextColor, Converter={StaticResource ColorToBrushConverter}}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="10,5"/>

                <Button Grid.Column="1"
                        Content="X"
                        Width="25"
                        Height="25"
                        Margin="5"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        Foreground="{Binding TextColor, Converter={StaticResource ColorToBrushConverter}}"
                        BorderThickness="0"/>
            </Grid>

            <!-- Great Rune list -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="5,0">
                <ItemsControl ItemsSource="{Binding GreatRunes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource RuneItemStyle}"
                                    Margin="0,2"
                                    Padding="5,3"
                                    CornerRadius="3">
                                <Border.Background>
                                    <SolidColorBrush Color="#20FFFFFF"/>
                                </Border.Background>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Status indicator -->
                                    <Ellipse Grid.Column="0"
                                             Grid.RowSpan="2"
                                             Width="12"
                                             Height="12"
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center"
                                             Fill="{Binding StatusBrush}"/>

                                    <!-- Rune name -->
                                    <TextBlock Grid.Column="1"
                                               Grid.Row="0"
                                               Text="{Binding ShortName}"
                                               FontWeight="Bold"
                                               FontSize="{Binding DataContext.FontSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                               Foreground="{Binding StatusBrush}"/>

                                    <!-- Location -->
                                    <TextBlock Grid.Column="1"
                                               Grid.Row="1"
                                               FontSize="{Binding DataContext.FontSize, RelativeSource={RelativeSource AncestorType=Window}}"
                                               Foreground="{Binding DataContext.TextColor, Converter={StaticResource ColorToBrushConverter}, RelativeSource={RelativeSource AncestorType=Window}}"
                                               TextWrapping="Wrap"
                                               Opacity="0.9">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding DisplayLocation}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.ShowDetailedLocation, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                        <Setter Property="Text" Value="{Binding LocationArea}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Status bar -->
            <Border Grid.Row="2"
                    Background="#40000000"
                    Margin="0,5,0,0"
                    Padding="10,5">
                <TextBlock Text="{Binding StatusText}"
                           Foreground="{Binding TextColor, Converter={StaticResource ColorToBrushConverter}}"
                           FontSize="11"
                           Opacity="0.8"/>
            </Border>
        </Grid>
    </Border>
</Window>
